        // Render property feed
        function renderPropertyFeed() {
            const feedContainer = document.querySelector('.feed-container');
            
            properties.forEach((property, index) => {
                const card = document.createElement('div');
                card.className = 'feed-card';
                card.style.animationDelay = `${index * 0.1}s`;
                
                let featuresHTML = '';
                if (property.bedrooms) {
                    featuresHTML = `
                        <div class="feed-features">
                            <div class="feed-feature">
                                <span>üõèÔ∏è</span>
                                <span><strong>${property.bedrooms}</strong> Hab.</span>
                            </div>
                            <div class="feed-feature">
                                <span>üöø</span>
                                <span><strong>${property.bathrooms}</strong> Ba√±os</span>
                            </div>
                            <div class="feed-feature">
                                <span>üìê</span>
                                <span><strong>${property.area}</strong> m¬≤</span>
                            </div>
                        </div>
                    `;
                } else {
                    featuresHTML = `
                        <div class="feed-features">
                            <div class="feed-feature">
                                <span>üìê</span>
                                <span><strong>${property.area}</strong> m¬≤</span>
                            </div>
                        </div>
                    `;
                }

                card.innerHTML = `
                    <div class="feed-image-container">
                        <img src="${property.image}" alt="${property.title}" class="feed-image">
                        <div class="feed-status">${property.status}</div>
                    </div>
                    <div class="feed-info">
                        <div class="feed-price">$${property.price.toLocaleString()}</div>
                        <h3 class="feed-title">${property.title}</h3>
                        <div class="feed-location">
                            <span>üìç</span>
                            <span>${property.location}</span>
                        </div>
                        ${featuresHTML}
                    </div>
                `;
                
                feedContainer.appendChild(card);
            });
        }

        // Initial render of property feed
        renderPropertyFeed();

        // Render properties
        function renderProperties(propertiesToShow = properties) {
            const grid = document.getElementById('propertyGrid');
            grid.innerHTML = '';

            propertiesToShow.forEach((property, index) => {
                const card = document.createElement('div');
                card.className = 'property-card';
                card.style.animationDelay = `${index * 0.1}s`;
                
                let featuresHTML = '';
                if (property.bedrooms) {
                    featuresHTML = `
                        <div class="property-features">
                            <div class="feature">
                                <span>üõèÔ∏è</span>
                                <span><strong>${property.bedrooms}</strong> Hab.</span>
                            </div>
                            <div class="feature">
                                <span>üöø</span>
                                <span><strong>${property.bathrooms}</strong> Ba√±os</span>
                            </div>
                            <div class="feature">
                                <span>üìê</span>
                                <span><strong>${property.area}</strong> m¬≤</span>
                            </div>
                        </div>
                    `;
                } else {
                    featuresHTML = `
                        <div class="property-features">
                            <div class="feature">
                                <span>üìê</span>
                                <span><strong>${property.area}</strong> m¬≤</span>
                            </div>
                        </div>
                    `;
                }

                card.innerHTML = `
                    <div class="property-image-container">
                        <img src="${property.image}" alt="${property.title}" class="property-image">
                        <div class="property-status">${property.status}</div>
                    </div>
                    <div class="property-info">
                        <div class="property-price">$${property.price.toLocaleString()}</div>
                        <h3 class="property-title">${property.title}</h3>
                        <div class="property-location">
                            <span>üìç</span>
                            <span>${property.location}</span>
                        </div>
                        ${featuresHTML}
                    </div>
                `;
                
                grid.appendChild(card);
            });

            // Add fade-in animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes fadeInCard {
                    from {
                        opacity: 0;
                        transform: translateY(20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
                .property-card {
                    animation: fadeInCard 0.6s ease-out forwards;
                    opacity: 0;
                }
            `;
            document.head.appendChild(style);
        }

        // Filter properties
        function filterProperties() {
            const type = document.getElementById('filterType').value;
            const maxPrice = parseFloat(document.getElementById('filterPrice').value) || Infinity;
            const location = document.getElementById('filterLocation').value;

            const filtered = properties.filter(property => {
                const typeMatch = type === 'todos' || property.type === type;
                const priceMatch = property.price <= maxPrice;
                const locationMatch = location === 'todos' || property.locationKey === location;
                
                return typeMatch && priceMatch && locationMatch;
            });

            renderProperties(filtered);
        }

        // Handle form submission
        function handleSubmit(event) {
            event.preventDefault();
            alert('¬°Gracias por tu mensaje! Nos pondremos en contacto contigo pronto.');
            event.target.reset();
        }

        // Initial render
        renderProperties();

        // Smooth scroll offset for fixed header
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                const offset = 80;
                const targetPosition = target.offsetTop - offset;
                
                window.scrollTo({
                    top: targetPosition,
                    behavior: 'smooth'
                });
            });
        });
    </script>
